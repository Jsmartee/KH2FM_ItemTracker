            <Image Grid.Row="5" Grid.Column="8" Source="./Resources/Images/trophy_goddess.png"
                   Height="40" Width="40" x:Name="GoddessCup"/>
            <Image Grid.Row="5" Grid.Column="8" Source="./Resources/Images/mickey_0.png"
                   Height="15" Width="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,2"
                   MouseLeftButtonDown="CheckItem" MouseRightButtonDown="UncheckItem"/>

            <Frame x:Name="Main" Grid.RowSpan="8" Grid.ColumnSpan="10"/>






        </Grid>

    </DockPanel>

</Window>
